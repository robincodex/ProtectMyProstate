<Window x:Class="ProtectMyProstate.RestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtectMyProstate"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#eeeeee"
        Title="换个姿势" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image x:Name="Icon" Source="Resource/站立.png" Width="100" />
            <StackPanel VerticalAlignment="Center" Margin="50">
                <TextBlock x:Name="Title" FontSize="30" Margin="20" >升高或降低桌子</TextBlock>
                <Button Focusable="False" FontSize="20" Width="100" Click="Button_Click">继续</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
